<body>
<div>
    <a href="/">home</a>
 {{#theStore}}
    <h3>{{store}}</h3>
    <h4>{{city}}</h4>

     <form action="/add-item/{{id}}" method="POST">

        <input type="hidden" value={{id}}/>
        <input type="text" name="item" placeholder="Item"/>
        <input type="text" name="qty" placeholder="Quantity"/>
        <input type="text" name="aisle" placeholder="Aisle Number"/>
        <input type="submit" value="Submit"/>
    
    </form>

    <ul>
        {{#aislesArray}}
            <li>

                <strong>Aisle: {{aisle_number}}</strong>

                <form action="/add-item/{{store_id}}" method="POST">

                    <input type="hidden" name="aisle" value={{id}}/>
                    <input type="text" name="item" placeholder="Item"/>
                    <input type="text" name="qty" placeholder="Quantity"/>
                    <input type="submit" value="Submit"/>

                </form>

                <ul>
                    {{#items}}
                        
                        <li>
                            <p>{{item}}</p>
                            <p>{{qty}}</p>
                            <p>{{aisle}}</p>
                        </li>
                        <br/>
                
                    {{/items}}
                 </ul>
            </li>
            <br/>
        {{/aislesArray}}
    </ul>

 {{/theStore}}

</div>
</body>
